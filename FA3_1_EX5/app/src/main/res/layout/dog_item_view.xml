<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="@drawable/rounded_bg"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    >



    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/dogListName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Dog Name"
            android:maxLines="1"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            />

        <ImageButton
            android:id="@+id/dogListEditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/dogListDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/dogListImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonLayout"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/dogAdoptionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adoption Status"
        android:maxLines="1"
        android:textSize="14sp"

        android:layout_below="@id/dogListImage"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="8dp"

        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"

        android:background="@drawable/rounded_bg_grey"
        />
</RelativeLayout>